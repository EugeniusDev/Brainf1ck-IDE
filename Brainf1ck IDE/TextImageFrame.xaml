<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brainf1ck_IDE.TextImageFrame"
             x:Name="this">
    <Frame MinimumWidthRequest="140"
           BindingContext="{x:Reference this}"
           HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CommandToCall}" />
        </Frame.GestureRecognizers>
        <HorizontalStackLayout Spacing="12"
                        HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="{Binding ImageSrc}" Margin="16,16,0,16" />
            <VerticalStackLayout  Margin="0,16,16,16" VerticalOptions="Center"
                                  Spacing="10">
                <Label
                   FontSize="{Binding PrimaryTextFontSize, FallbackValue=Micro}"
                   Text="{Binding PrimaryText}" />
                <Label IsVisible="{Binding EnableSecondaryText, FallbackValue=False}"
                   FontSize="{Binding SecondaryTextFontSize, FallbackValue=Micro}"
                   Text="{Binding SecondaryText}" />
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </Frame>
</ContentView>
